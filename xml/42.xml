               <placeName xml:id="name42-2" xml:lang="en" source="#bib42-2">Aski Mosul</placeName>
               <placeName xml:id="name42-3" xml:lang="syr" syriaca-tags="#syriaca-headword">ܒܠܕ</placeName>
               <placeName xml:id="name42-4" xml:lang="syr-Syrj" source="#bib42-3">ܒܳܠܳܕ</placeName>
               <placeName xml:id="name42-5" xml:lang="ar" source="#bib42-4">بَلد</placeName>
               <placeName xml:id="name42-6" xml:lang="ar" source="#bib42-4">اسكي موصل</placeName>
               <placeName xml:id="name42-7" xml:lang="en" source="#bib42-5 #bib42-7">Eski Mosul</placeName>
               <desc xml:id="abstract-en-42" xml:lang="en">
                  <quote source="#bib42-1">Balad, Assyrian Balaṭ, Syriac and Arabic Balad or Balaṭ, and modern Aski Mosul (Turkish for ‘Old Mosul’) are names referring to a town located some 40 km. northwest of Mosul, on the west bank of the Tigris.</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib42-1">70. Balad</quote>
               </desc>
               <desc xml:lang="syr-Syrj">
                  <quote source="#bib42-3">ܡܕܝܢܬܳܐ ܥܰܬܝܩܬܳܐ ܕܥܠ ܕܶܩܠܰܬ ܠܡܰܥܪܒܐ ܠܥܶܠ ܡܶܢ ܡܰܘܨܠ ܕܐܺܝܬ ܒܰܝܢܳܬܗܝܢ ܫܰܒܥܐ ܦܪ̈ܣܚܝܢ ܚܰܪܝ̣ܒܐ.</quote>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib42-4">مدينة قديمة على دجلة من غربيها فوق الموصل بينهما سبع فراسخ، خربت في المئة الرابعة عشرة ويقال لاطلالها اسكي موصل</quote>
               </desc>
               <desc xml:lang="en">
                  <quote source="#bib42-5">an ancient town above Mosul on the western bank of the Tigris, ruined in the fourteenth century. It is now called Eski Mosul.</quote>
               </desc>
               <state type="existence" from="0559">
                  <precision match="@from" notAfter="0559"/>
               </state>
